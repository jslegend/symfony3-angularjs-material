{% extends "base.html.twig" %}

{% block title %} AppBundle:Register:Register {% endblock %}

{% block body %}

<md-content class="page-register" ng-app="RegisterApp" ng-controller="Ctrl" layout="row" layout-align="space-around" layout-padding="layout-padding" ng-cloak="ng-cloak">
    <md-card flex="flex" flex-gt-sm="50" flex-gt-md="33">
        <md-toolbar>
            <div class="md-toolbar-tools">
                <h2><span>Login Form</span></h2>
            </div>
        </md-toolbar>
        <md-card-content>
            <form action="{{ path('register') }}" method="post" name="Form">
                <md-input-container class="md-block">
                    <label>UserName</label>
                    <input type="text" name="_username" ng-model="vm.formData.username" placeholder="User Name" required=""/>
                    <div ng-messages="Form.username.$error" role="alert" multiple="">
                        <div class="my-message" ng-message="required">You must supply a username.</div>
                    </div>
                </md-input-container>

                <md-input-container class="md-block">
                    <label>Password</label>
                    <input type="password" name="_password" ng-model="vm.formData.password" placeholder="Password" required="" md-maxlength="16"/>
                    <div ng-messages="Form.password.$error" role="alert" multiple="">
                        <div class="my-message" ng-message="required">You must supply a password.</div>
                        <div class="my-message" ng-message="md-maxlength">Too long.</div>
                    </div>
                </md-input-container>

                <md-input-container class="md-block">
                    <label>Confirm Password</label>
                    <input type="password" name="_confirm_password" ng-model="vm.formData.confirm_password" placeholder="Confirm Password" required="" md-maxlength="16"/>
                    <div ng-messages="Form.password.$error" role="alert" multiple="">
                        <div class="my-message" ng-message="required">You must supply a password.</div>
                        <div class="my-message" ng-message="md-maxlength">Too long.</div>
                    </div>
                </md-input-container>

                <md-input-container class="md-block">
                    <label>Email</label>
                    <input type="email" name="_email" ng-model="vm.formData.email" placeholder="Eamil" required=""/>
                    <div ng-messages="Form.email.$error" role="alert" multiple="">
                        <div class="my-message" ng-message="required">You must supply a email.</div>
                        <div class="my-message" ng-message="md-maxlength">Too long.</div>
                    </div>
                </md-input-container>

                <md-button class="md-raised md-primary" ng-disabled="!Form.$valid" type="submit" value="submit" name="submit">&nbsp;Register&nbsp;</md-button>
            </form>
        </md-card-content>
    </md-card>
</md-content>

{% endblock %}

{% block javascripts %}
<script>
    var app = angular.module('RegisterApp',['ngMaterial','ngAnimate','ngAria','ngMessages'])
        .controller('Ctrl', function($scope) {
          $scope.vm = {
              formData: {
                username: '',
                password: '',
                confirm_password: '',
                email:''
              }
          };
    });
</script>
{% endblock %}
